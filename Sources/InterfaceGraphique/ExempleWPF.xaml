            </Menu>
            <WindowsFormsHost>
                <WindowsForm:Panel x:Name="GamePanel" Dock="Fill"></WindowsForm:Panel>
            </WindowsFormsHost>
            <!--<Canvas Name="GamePanel" DockPanel.Dock="Bottom" Loaded="GamePanel_Loaded">
                
            </Canvas>-->
        </DockPanel>
    </Grid>
